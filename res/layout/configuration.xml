<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scrollView"
        android:fillViewport="true" android:focusableInTouchMode="true">
    <LinearLayout  android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:id="@+id/linearLayout" >
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0dp"
                      android:layout_marginTop="15dp" android:layout_weight="2" android:gravity="center_vertical">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:weightSum="11">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Impact sensitivity" android:id="@+id/textView" android:layout_marginLeft="20dp"
                          android:textSize="18dp" android:layout_weight="3"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/textView9" android:layout_weight="2" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="G"
                          android:id="@+id/textView10" android:layout_weight="1" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/textView11" android:layout_weight="2" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="km/h"
                          android:id="@+id/textView12" android:layout_weight="1" android:textSize="18dp"/>
            </LinearLayout>
            <SeekBar android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/seekBar"
                     android:max="19"/>
        </LinearLayout>
        <TableLayout android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                     android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="4"
                     android:weightSum="4">
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="13"
                      android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/textView1" android:layout_weight="4"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Call"
                          android:id="@+id/textView2" android:layout_weight="3"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMS"
                          android:id="@+id/textView3" android:layout_weight="3"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Post"
                          android:id="@+id/textView4" android:layout_weight="3"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="13"
                      android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Impact"
                          android:id="@+id/textView5" android:layout_weight="4"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton1" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton2" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton3" android:layout_gravity="center_vertical"/>
                </FrameLayout>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="13"
                      android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Voice"
                          android:id="@+id/textView6" android:layout_weight="4"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton4" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton5" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton6" android:layout_gravity="center_vertical"/>
                </FrameLayout>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="13"
                      android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Button"
                          android:id="@+id/textView7" android:layout_weight="4"
                          android:layout_gravity="center_vertical|left" android:textSize="18dp"/>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton7" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton8" android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                             android:layout_weight="3">
                    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/ToggleButton9" android:layout_gravity="center_vertical"/>
                </FrameLayout>
            </TableRow>
        </TableLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0dp"
                      android:layout_weight="4" android:weightSum="8">
            <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                      android:text="Text for SMS or Post" android:id="@+id/textView8" android:layout_gravity="center"
                      android:textSize="18dp" android:layout_weight="2" android:gravity="bottom"/>
            <EditText android:layout_width="fill_parent" android:layout_height="0dp" android:text="Type your message..."
                      android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:id="@+id/editText"
                      android:layout_weight="6" android:gravity="left"/>
        </LinearLayout>
        <TextView android:gravity="center_horizontal" android:id="@+id/textView13" android:layout_height="20dp"
                  android:layout_width="fill_parent" android:text="Add phone numbers to be contacted"/>
        <LinearLayout android:layout_height="0dp" android:layout_weight="1.5" android:layout_width="fill_parent"
                      android:orientation="horizontal" android:id="@+id/linearLayout1">
            <Spinner android:layout_width="0dp" android:layout_height="40dp" android:id="@+id/phoneListSpinner"
                     android:layout_gravity="center" android:layout_weight=".60" android:longClickable="false"/>
            <ImageButton android:layout_width="0dp" android:layout_height="fill_parent" android:id="@+id/addPhoneNumber"
                         android:layout_weight=".20" android:src="@drawable/add_icon" android:scaleType="fitCenter"/>
            <ImageButton android:cropToPadding="false" android:focusable="false" android:focusableInTouchMode="false"
                         android:id="@+id/deletePhoneNumber" android:layout_height="fill_parent"
                         android:layout_weight=".20" android:layout_width="0dp" android:longClickable="false"
                         android:scaleType="fitCenter" android:src="@drawable/delete_icon"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical|center_horizontal" android:layout_height="0dp"
                      android:layout_weight="2" android:layout_width="fill_parent" android:orientation="horizontal"
                      android:weightSum="12" android:id="@+id/linearLayout2">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save"
                    android:id="@+id/button2" android:textSize="16dp" android:layout_weight="3"/>
            <Button android:id="@+id/button3" android:layout_height="wrap_content" android:layout_weight="3"
                    android:layout_width="wrap_content" android:text="Cancel" android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>